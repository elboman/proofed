{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "_bundles",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}